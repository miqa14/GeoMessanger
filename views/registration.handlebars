<div class="row auth-row">
    <div class="col z-depth-2 auth-box">
        <div class="col s6 auth-image-box">
            <img src="/image/auth_pic.jpg" class="auth-image">
        </div>

        <div class="col s6">
            <form action="/auth/registration" method="POST" enctype="multipart/form-data">
                <h4 class="center-alight auth-form-title">Regsitration form</h4>

                {{#if error}}
                    <div class="error-flash-container z-depth-2 col s10 offset-s1">
                        <p class="error-flash-text center-alight">{{error}}</p>
                    </div>
                {{/if}}

                {{#if info}}
                    <div class="info-flash-container z-depth-2 col s10 offset-s1">
                        <p class="info-flash-text center-alight">{{info}}</p>
                    </div>
                {{/if}}
                
                <div class="input-field col s10 offset-s1">
                    <input id="user_name" type="text" name="user_name">
                    <label for="user_name">User name</label>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="first_name" type="text" name="first_name">
                    <label for="first_name">First name</label>
                </div>
                
                <div class="input-field col s10 offset-s1">
                    <input id="last_name" type="text" name="last_name">
                    <label for="last_name">Last name</label>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="birth_date" type="text" class="datepicker" name="birth_date">
                    <label for="birth_date">Birth date</label>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="email" type="email" name="email">
                    <label for="email">Email</label>
                </div>

                <div class="file-field input-field col s10 offset-s1">
                    <div class="btn">
                        <span>Profile Photo</span>
                        <input type="file" name="photo">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="password" type="password" name="password">
                    <label for="password">password</label>
                </div>

                <div class="input-field col s10 offset-s1">
                    <input id="confirm_password" type="password" name="confirm_password">
                    <label for="confirm_password">Confirm Password</label>
                </div>

                <button type="submit" class="btn-large waves-effect waves-light grey darken-3 submit-button">
                    Registration
                    <i class="material-icons right">send</i>
                </button>

            </form>
        </div>
    </div>
</div>